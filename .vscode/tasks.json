{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

        // Templ CLI
        {
            "label": "templ generate",
            "type": "shell",
            "command": "templ generate",
            "options": {
                "statusbar": {
                    "label": "templ generate",
                    "color": "#649ff8",
                    
                },
            },
            "hide": true
        },


            // Tailwind CSS CLI
        {
            "label": "tw watch",
            "type": "shell",
            "command": "./tailwindcss -i view/css/app.css -o public/styles.css --watch",
            "hide": true
        },

        {
            "label": "tw minify",
            "type": "shell",
            "command": "./tailwindcss -i view/css/app.css -o public/styles.css --minify",
            "hide": true
        },

        {
            "label": "tw build",
            "type": "shell",
            "command": "./tailwindcss -i view/css/app.css -o public/styles.css",
            "hide": true
        },

        //Watch Mode Chained Tasks
        {
            "label": "Start All Tasks",
            "dependsOn": ["tailwind-watch", "air", "templ-watch"],
            "dependsOrder": "parallel",
            "options": {
                "statusbar": {
                    "label": "-chain-",
                    "color": "#6af50e",
                    
                },
            },
        },
        
        {
            "label": "tailwind-watch",
            "type": "shell",
            "command" : "./tailwindcss -i view/css/app.css -o public/styles.css --watch",
            "presentation": {
                "panel": "new"
            },
            "hide": true
        },
            {
            "label": "air",
            "type": "shell",
            "command" : "air",
            "presentation": {
                "panel": "new"
            },
            "hide": true
        },
        {
            "label": "templ-watch",
            "type": "shell",
            "command" : "templ generate --watch --proxy='http://localhost:3000'",
            
            "presentation": {
                "panel": "new"
            },
            "hide": true
        }

    ]
}